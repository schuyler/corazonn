#ifndef CONFIG_H
#define CONFIG_H

// WiFi Configuration
#define WIFI_SSID "your_network_name"          // Network name (SSID)
#define WIFI_PASSWORD "your_password"           // Network password

// Server Configuration (Sensor Processor IP and Port)
#define SERVER_IP "192.168.1.100"               // IP address of sensor processor
#define SERVER_PORT 8000                        // OSC port (default: 8000)
#define ADMIN_PORT 8006                         // Port for receiving admin commands

// Unit Configuration
#define PPG_ID 0                                // Unique ID: 0, 1, 2, or 3 per unit
                                                // GPIO pin for PPG analog input
                                                // Choose ONE based on your ESP32 variant:

// Uncomment ONE of the following GPIO configurations:

// For ESP32-WROOM (testing/development)
#define PPG_GPIO 32                             // ADC1_CH4 (GPIO 32)

// For ESP32-S3 (production)
// #define PPG_GPIO 4                            // ADC1_CH3 (GPIO 4)

// Advanced Configuration (typically no changes needed)
#define SAMPLE_RATE_HZ 50                       // Samples per second
#define SAMPLE_INTERVAL_MS 20                   // 1000 / SAMPLE_RATE_HZ
#define BUNDLE_SIZE 5                           // Samples per OSC bundle
#define BUNDLE_INTERVAL_MS 100                  // (BUNDLE_SIZE * SAMPLE_INTERVAL_MS)
#define WIFI_RECONNECT_INTERVAL_MS 5000         // Retry WiFi connection every 5 seconds
#define LED_PIN 2                               // Status LED (GPIO 2, valid for WROOM and S3)

#endif // CONFIG_H
